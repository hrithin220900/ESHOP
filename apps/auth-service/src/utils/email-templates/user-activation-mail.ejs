    <noscript>
        <xml>
            <o:OfficeDocumentSettings>
                <o:PixelsPerInch>96</o:PixelsPerInch>
            </o:OfficeDocumentSettings>
        </xml>
    </noscript>
    <![endif]-->
</head>

<body>
    <!-- Main Container -->
    <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" class="email-container">
        <tr>
            <td align="center" style="padding: 40px 20px;">
                <!-- Email Container -->
                <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="600" class="email-wrapper">

                    <!-- Header -->
                    <tr>
                        <td class="header">
                            <div class="logo-container">
                                <h1 class="logo">
                                    e<span class="accent">Shop</span>
                                </h1>
                            </div>
                            <h2 class="header-subtitle">
                                Welcome to Your Shopping Journey!
                            </h2>
                        </td>
                    </tr>

                    <!-- Content -->
                    <tr>
                        <td class="content">
                            <!-- Welcome Message -->
                            <div class="welcome-section">
                                <div class="welcome-icon">
                                    <div class="welcome-emoji">🎉</div>
                                </div>
                                <h2 class="welcome-title">
                                    Hi <%= name || 'Valued Customer' %>!
                                </h2>
                                <p class="welcome-text">
                                    Thank you for joining <strong>eShop</strong>! We're excited to have you as part of
                                    our community.
                                </p>
                            </div>

                            <!-- Activation Instructions -->
                            <div class="activation-section">
                                <h3 class="activation-title">
                                    🔐 Verify Your Email
                                </h3>
                                <p class="activation-text">
                                    To start exploring amazing products and exclusive deals, please use the verification
                                    code below to activate your account:
                                </p>
                            </div>

                            <!-- OTP Display -->
                            <div class="cta-container">
                                <div
                                    style="background-color: #f8f9ff; border: 2px solid #667eea; border-radius: 12px; padding: 30px; text-align: center; margin: 20px 0;">
                                    <h3 style="color: #2c3e50; margin: 0 0 10px 0; font-size: 18px;">Your Verification
                                        Code</h3>
                                    <div
                                        style="font-size: 36px; font-weight: bold; color: #667eea; letter-spacing: 8px; font-family: 'Courier New', monospace;">
                                        <%= otp %>
                                    </div>
                                    <p style="color: #5a6c7d; font-size: 14px; margin: 15px 0 0 0;">This code will
                                        expire in 5 minutes</p>
                                </div>
                            </div>

                            <!-- Instructions -->
                            <div class="alt-link-container">
                                <p class="alt-link-text">
                                    Enter this code in the verification form to complete your account activation.
                                </p>
                            </div>

                            <!-- Benefits Section -->
                            <div class="benefits-section">
                                <h3 class="benefits-title">
                                    What's Waiting for You?
                                </h3>
                                <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
                                    <tr>
                                        <td width="33%" class="benefit-item">
                                            <div class="benefit-icon deals">
                                                <span>🛍️</span>
                                            </div>
                                            <h4 class="benefit-title">Exclusive Deals</h4>
                                            <p class="benefit-text">Access to member-only discounts and flash sales</p>
                                        </td>
                                        <td width="33%" class="benefit-item">
                                            <div class="benefit-icon shipping">
                                                <span>🚚</span>
                                            </div>
                                            <h4 class="benefit-title">Free Shipping</h4>
                                            <p class="benefit-text">Enjoy free delivery on orders above $50</p>
                                        </td>
                                        <td width="33%" class="benefit-item">
                                            <div class="benefit-icon rewards">
                                                <span>⭐</span>
                                            </div>
                                            <h4 class="benefit-title">Rewards Program</h4>
                                            <p class="benefit-text">Earn points with every purchase</p>
                                        </td>
                                    </tr>
                                </table>
                            </div>

                            <!-- Security Note -->
                            <div class="security-notice">
                                <div class="security-content">
                                    <div class="security-icon">🔒</div>
                                    <div>
                                        <h4 class="security-title">Security Notice</h4>
                                        <p class="security-text">
                                            This activation link will expire in <strong>24 hours</strong> for your
                                            security.
                                            If you didn't create this account, please ignore this email.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>

                    <!-- Footer -->
                    <tr>
                        <td class="footer">
                            <div class="footer-brand">
                                <h3 class="footer-logo">
                                    e<span class="accent">Shop</span>
                                </h3>
                                <p class="footer-tagline">
                                    Your trusted online shopping destination
                                </p>
                            </div>

                            <div class="footer-bottom">
                                <p class="footer-contact">
                                    Need help? Contact our support team at
                                    <a href="mailto:support@eshop.com">support@eshop.com</a>
                                </p>
                                <p class="footer-legal">
                                    © 2024 eShop. All rights reserved. |
                                    <a href="#">Privacy Policy</a> |
                                    <a href="#">Terms of Service</a>
                                </p>
                            </div>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</body>

</html>